/* Mato Grosso do Sul - ms */

// Colors
$branco = rgba(255,255,255,1)
$verde = rgba(1,159,111,1)
$azul = rgba(41, 128, 185,1)
$amarelo = rgba(254,230,60,1)

.flag-ms
    padding 40px 0
    margin-bottom 10px

.flag-ms h1
    text-align center

.flag-ms > .flag
    margin 0 auto
    background $branco
    background-image: linear-gradient(-224.5deg, $verde 31%, transparent 30%),
    linear-gradient(-44deg, $azul 58%, transparent 30%)

.flag-ms .flag:before
    content '\2605'
    color $amarelo
    font-size 68px
    margin-top 90px
    margin-right 25px
    float right
    position relative
